<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/profile_linearLayout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avatar"
                android:id="@+id/tweet_userProfile"
                android:background="@drawable/profile_img_bg"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="#22DDF3"
                android:padding="8dp"
                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweet_post_date"
            android:text="Mon 23rd 2019"
            android:textSize="15sp"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_text"
            android:layout_below="@+id/profile_linearLayout"
            android:text="@string/hello_am_using_twitter"
            android:padding="10dp"
            />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/avatar"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/post_text"
            android:id="@+id/post_image"
            android:layout_alignParentStart="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_image"
            android:layout_alignParentStart="true"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_favorite_border_black_24dp"
                android:layout_alignParentStart="true"
                android:id="@+id/like"
                android:layout_marginStart="30dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:src="@android:drawable/ic_menu_revert"
                android:id="@+id/retweet"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@android:drawable/ic_dialog_email"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:id="@+id/comment"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>